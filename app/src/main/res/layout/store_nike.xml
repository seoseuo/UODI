<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_bg"
        android:elevation="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/nike_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="NIKE"
            android:textColor="@color/bg"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="5dp"
        android:background="@drawable/background"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="22/23 신상 모델"
                android:textColor="@color/bg"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/nike_dunk_se"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="덩크 로우 레트로SE"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/toolbarColor"
                        android:text="나이키 덩크로우"/>

                    <TextView

                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/bg"
                        android:text="139,000 KRW"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/nike_airforce_107"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/bg"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:text="에어포스 1'07"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/toolbarColor"
                        android:text="나이키 에어포스"/>

                    <TextView

                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/bg"
                        android:text="139,000 KRW"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/nike_fega"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="페가수스 트레일 4"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/toolbarColor"
                        android:text="4 GORE-TEXT"/>

                    <TextView

                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/bg"
                        android:text="189,000 KRW"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/nike_airmax_97"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/bg"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:text="에어맥스 97"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/toolbarColor"
                        android:text="나이키 에어맥스"/>

                    <TextView

                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/bg"
                        android:text="219,000 KRW"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="매장 내 프로모션"
                    android:textColor="@color/bg"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="160dp"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        tools:ignore="MissingDefaultResource">

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/nike_dryfit"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="드라이 핏 스우시"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textColor="@color/toolbarColor"
                            android:text="나이키 드라이 핏"/>

                        <TextView

                            android:layout_marginHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textColor="@color/bg"
                            android:text="20% -> 69,300 KRW"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="160dp"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        tools:ignore="MissingDefaultResource">

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/nike_tour"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/bg"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:text="투어 에센셜"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textColor="@color/toolbarColor"
                            android:text="나이키 투어 에센셜"/>

                        <TextView

                            android:layout_marginHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textColor="@color/bg"
                            android:text="30% -> 125,100 KRW"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>

